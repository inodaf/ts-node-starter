{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "A template.",
  "author": "Isac Fadoni <isacfadoni@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "APP_ENV=development ts-node-dev -r tsconfig-paths/register --respawn -T src",
    "tscheck": "tsc --noEmit",
    "lint": "yarn tscheck",
    "start": "ts-node -r tsconfig-paths/register -T src",
    "start:prod": "APP_ENV=production yarn start",
    "start:stag": "APP_ENV=staging yarn start",
    "test": "ava",
    "test:w": "ava -w",
    "test:cov": "c8 ava"
  },
  "dependencies": {
    "dotenv-flow": "^3.2.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/node": "^16.11.0",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "msw": "^0.35.0",
    "supertest": "^6.1.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "ava": {
    "failFast": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*"
    ],
    "environmentVariables": {
      "APP_ENV": "development",
      "DOTENV_FLOW_PATH": "config/envs"
    },
    "require": [
      "tsconfig-paths/register",
      "ts-node/register",
      "dotenv-flow/config"
    ]
  }
}
