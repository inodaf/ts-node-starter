{
  "name": "ts-node-starter",
  "description": "A template.",
  "version": "1.0.0",
  "engines": {
    "node": "v16.13.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "APP_ENV=development ts-node-dev -r tsconfig-paths/register --respawn -T src",
    "tscheck": "tsc --noEmit",
    "lint": "yarn xo",
    "lint:fix": "yarn xo --fix",
    "start": "ts-node -r tsconfig-paths/register -T src",
    "start:prod": "APP_ENV=production yarn start",
    "start:stag": "APP_ENV=staging yarn start",
    "test": "ava",
    "test:w": "ava -w",
    "test:cov": "c8 ava",
    "bundle:prod": "APP_ENV=production tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src/ -o ./dist/src",
    "start:bundle:prod": "NODE_ENV=production APP_ENV=production node dist/src"
  },
  "dependencies": {
    "dotenv-flow": "^3.2.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/node": "^16.11.0",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "msw": "^0.35.0",
    "supertest": "^6.1.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4",
    "xo": "^0.45.0"
  },
  "ava": {
    "failFast": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*"
    ],
    "environmentVariables": {
      "APP_ENV": "development",
      "DOTENV_FLOW_PATH": "config/envs"
    },
    "require": [
      "tsconfig-paths/register",
      "ts-node/register",
      "dotenv-flow/config"
    ]
  },
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "rules": {
      "new-cap": "off",
      "import/extensions": "off",
      "node/prefer-global/process": "off",
      "import/no-unassigned-import": "off",
      "@typescript-eslint/naming-convention": "off"
    }
  }
}
