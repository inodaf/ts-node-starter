{
  "name": "ts-node-starter",
  "description": "A template.",
  "version": "1.0.0",
  "engines": {
    "node": "v16.13.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "APP_ENV=development ts-node-dev -r tsconfig-paths/register --respawn -T src",
    "tscheck": "tsc --noEmit",
    "fmt:check": "prettier --check '**/*.{ts,json}'",
    "lint:check": "eslint . --ext .ts,.json",
    "lint": "eslint . --ext .ts,.json --fix",
    "fmt": "prettier --write '**/*.{ts,json}'",
    "start": "ts-node -r tsconfig-paths/register -T src",
    "start:prod": "APP_ENV=production yarn start",
    "start:stag": "APP_ENV=staging yarn start",
    "test": "ava",
    "test:w": "ava -w",
    "test:cov": "c8 ava",
    "bundle:prod": "APP_ENV=production tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src/ -o ./dist/src",
    "start:bundle:prod": "NODE_ENV=production APP_ENV=production node dist/src"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "altair-fastify-plugin": "^4.2.1",
    "class-validator": "^0.13.2",
    "dotenv-flow": "^3.2.0",
    "fastify": "^3.24.1",
    "fastify-cors": "^6.0.2",
    "fastify-helmet": "^5.3.2",
    "graphql": "^15.5.1",
    "joi": "^17.5.0",
    "mercurius": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "msw": "^0.35.0",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "ava": {
    "failFast": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*"
    ],
    "environmentVariables": {
      "APP_ENV": "development",
      "DOTENV_FLOW_PATH": "config/envs"
    },
    "require": [
      "tsconfig-paths/register",
      "ts-node/register/transpile-only",
      "dotenv-flow/config",
      "./config/mocks/setup-tests.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "eslintIgnore": [
    ".vscode",
    "coverage",
    "dist"
  ]
}
