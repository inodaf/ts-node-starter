{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src/",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/": ["./src/"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./tests/**/*.ts"]
}
